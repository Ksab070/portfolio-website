{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": "logs:CreateLogGroup",
			"Resource": "log-group-arn"
		},
		{
			"Effect": "Allow",
			"Action": [
				"logs:CreateLogStream",
				"logs:PutLogEvents"
			],
			"Resource": [
				"log-group-arn"
			]
		},
		{
			"Effect": "Allow",
			"Resource": [
				"table-arn"
			],
			"Action": [
				"dynamodb:UpdateItem",
				"dynamodb:GetItem"
			]
		}
	]
}